<rdf:RDF xml:base="http://docs.oasis-open.org/ns/cti/stix/course-of-action"
	xmlns:coa="http://docs.oasis-open.org/ns/cti/stix/course-of-action#"
	xmlns:cti="http://docs.oasis-open.org/ns/cti#"
	xmlns:owl="http://www.w3.org/2002/07/owl#"
	xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
